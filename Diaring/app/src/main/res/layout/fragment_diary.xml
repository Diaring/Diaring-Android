<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.calendar.DiaryFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_diary_main_background"
        >

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 상단 텍스트 -->
        <!-- //////////////////////////////////////////////////////////////// -->
        <EditText
            android:id="@+id/diary_subject_text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Subject"
            android:inputType="text"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:selectAllOnFocus="false"
            android:clickable="false"
            android:enabled="false"
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/diary_date_text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@id/diary_subject_text"
            app:layout_constraintTop_toTopOf="@id/diary_subject_text"
            android:text="2022년 5월 17일"
            android:maxLines="1"
            android:textColor="#FFFFFFFF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/diary_place_text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="@id/diary_date_text"
            app:layout_constraintTop_toTopOf="@id/diary_date_text"
            android:text="장소"
            android:inputType="text"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:selectAllOnFocus="false"
            android:clickable="false"
            android:enabled="false"
            android:gravity="top"
            android:textColor="#DDFFFFFF"
            android:textSize="14dp"/>

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 상단 메뉴 버튼 -->
        <!-- //////////////////////////////////////////////////////////////// -->

        <ImageView
            android:id="@+id/diary_menu_button"
            android:contentDescription=" "
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_menu_24" />

        <ImageView
            android:id="@+id/diary_list_button_bg"
            android:contentDescription=" "
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_remove_circle_24" />

        <ImageView
            android:id="@+id/diary_list_button"
            android:contentDescription=" "
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_more_horiz_24" />

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 일기 메인 이미지, 해시태그 텍스트 -->
        <!-- //////////////////////////////////////////////////////////////// -->

        <!-- Rectangle shape에 round edge 적용 시, round edge가 image에 적용되지 않는 버그가 존재함-->
        <!-- 외부 라이브러리 Android Shape ImageView 를 사용하여 해결했으나 추후 더 나은 방법이 발견되면 개선할 예정 -->
        <!-- Android Shape ImageView 코드 분석 결과 문제 발생 가능성 낮다고 판단. 디버그 중 문제 발견되지 않는 한 유지 -->
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/diary_main_image"
            android:contentDescription=" "
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="145dp"
            android:clickable="true"
            android:alpha="1"
            android:translationZ="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_cafe5"
            app:siRadius="12dp"
            app:siSquare="true"
            />

        <EditText
            android:id="@+id/diary_content_text"
            android:layout_width="270dp"
            android:layout_height="280dp"
            android:text="Content"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:selectAllOnFocus="false"
            android:clickable="false"
            android:translationZ="-1dp"
            android:enabled="false"
            android:gravity="top"
            android:alpha="0"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@color/transparency_0"

            app:layout_constraintStart_toStartOf="@id/diary_main_image"
            app:layout_constraintTop_toTopOf="@id/diary_main_image"
            />

        <EditText
            android:id="@+id/diary_hashtag_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/diary_main_image"
            app:layout_constraintTop_toBottomOf="@id/diary_main_image"
            android:text="#tag1 #tag2"
            android:inputType="text"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:selectAllOnFocus="false"
            android:clickable="false"
            android:enabled="false"
            android:gravity="top"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 날씨 바와 포함된 이미지 버튼들 -->
        <!-- //////////////////////////////////////////////////////////////// -->

        <ImageView
            android:id="@+id/diary_weather_bar"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:contentDescription=" "
            android:src="@drawable/bg_diary_weatherbar_background"
            app:layout_constraintEnd_toEndOf="@id/diary_main_image"
            app:layout_constraintStart_toStartOf="@id/diary_main_image"
            app:layout_constraintTop_toBottomOf="@id/diary_main_image"
            app:tint="@color/transparency_25" />

        <ImageButton
            android:id="@+id/diary_snowy_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="@id/diary_weather_bar"
            app:layout_constraintTop_toTopOf="@id/diary_weather_bar"
            app:layout_constraintBottom_toBottomOf="@id/diary_weather_bar"
            android:src="@drawable/ic_snow_24"
            android:background="@color/transparency_0"
            />

        <ImageButton
            android:id="@+id/diary_cloudy_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="@id/diary_weather_bar"
            app:layout_constraintTop_toTopOf="@id/diary_weather_bar"
            app:layout_constraintBottom_toBottomOf="@id/diary_weather_bar"
            android:src="@drawable/ic_cloud_24"
            android:background="@color/transparency_0"
            />

        <ImageButton
            android:id="@+id/diary_sunny_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="@id/diary_weather_bar"
            app:layout_constraintTop_toTopOf="@id/diary_weather_bar"
            app:layout_constraintBottom_toBottomOf="@id/diary_weather_bar"
            android:src="@drawable/ic_sun_24"
            android:background="@color/transparency_0"
            />

        <ImageButton
            android:id="@+id/diary_rainy_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="@id/diary_weather_bar"
            app:layout_constraintTop_toTopOf="@id/diary_weather_bar"
            app:layout_constraintBottom_toBottomOf="@id/diary_weather_bar"
            android:src="@drawable/ic_rain_24"
            android:background="@color/transparency_0"
            />

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 감정 바와 포함된 텍스트, 이미지뷰 -->
        <!-- //////////////////////////////////////////////////////////////// -->

        <SeekBar
            android:id="@+id/diary_emotion_seekBar"
            android:layout_width="300dp"
            android:layout_height="26dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/diary_weather_bar"
            app:layout_constraintEnd_toEndOf="@id/diary_weather_bar"
            app:layout_constraintTop_toBottomOf="@id/diary_weather_bar"
            android:min="-100"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/bg_diary_seekbar_background"
            android:thumb="@drawable/ic_circle_18"
            />

        <TextView
            android:id="@+id/diary_emotion_seekBar_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            app:layout_constraintStart_toStartOf="@id/diary_emotion_seekBar"
            app:layout_constraintBottom_toTopOf="@id/diary_emotion_seekBar"
            android:textSize="15dp"
            android:text="asdf"
            android:textColor="@color/transparency_75"
            />

        <ImageView
            android:id="@+id/diary_very_bad"
            android:contentDescription=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-10dp"
            app:layout_constraintEnd_toStartOf="@id/diary_emotion_seekBar"
            app:layout_constraintTop_toTopOf="@id/diary_emotion_seekBar"
            android:scaleType="fitXY"
            app:tint="@color/transparency_75"
            android:src="@drawable/ic_very_bad_24" />

        <ImageView
            android:id="@+id/diary_very_good"
            android:contentDescription=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            app:layout_constraintStart_toEndOf="@id/diary_emotion_seekBar"
            app:layout_constraintTop_toTopOf="@id/diary_emotion_seekBar"
            android:scaleType="fitXY"
            app:tint="@color/transparency_75"
            android:src="@drawable/ic_very_good_24" />

        <!-- //////////////////////////////////////////////////////////////// -->
        <!-- 화살표 및 재생 이미지 버튼, 관련 텍스트 -->
        <!-- //////////////////////////////////////////////////////////////// -->

        <ImageButton
            android:id="@+id/diary_left_arrow_button"
            android:contentDescription=" "
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/diary_emotion_seekBar"
            app:layout_constraintTop_toBottomOf="@id/diary_emotion_seekBar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_left_arrow"
            android:text="asdf"
            android:background="@color/transparency_0" />

        <ImageButton
            android:id="@+id/diary_play_button"
            android:contentDescription=" "
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diary_emotion_seekBar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pause_24"
            android:background="@color/transparency_0" />

        <ImageButton
            android:id="@+id/diary_right_arrow_button"
            android:contentDescription=" "
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@id/diary_emotion_seekBar"
            app:layout_constraintTop_toBottomOf="@id/diary_emotion_seekBar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_right_arrow"
            android:background="@color/transparency_0"/>

        <TextView
            android:id="@+id/diary_prev_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/diary_left_arrow_button"
            app:layout_constraintEnd_toEndOf="@id/diary_left_arrow_button"
            app:layout_constraintTop_toBottomOf="@id/diary_left_arrow_button"
            android:text="10/25"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/diary_play_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/diary_play_button"
            app:layout_constraintEnd_toEndOf="@id/diary_play_button"
            app:layout_constraintTop_toBottomOf="@id/diary_play_button"
            android:text="EDIT"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/diary_next_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/diary_right_arrow_button"
            app:layout_constraintEnd_toEndOf="@id/diary_right_arrow_button"
            app:layout_constraintTop_toBottomOf="@id/diary_right_arrow_button"
            android:text="11/11"
            android:textColor="@color/white"
            android:textSize="18dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
